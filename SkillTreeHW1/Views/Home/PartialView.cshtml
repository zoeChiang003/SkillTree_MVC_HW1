@model SkillTreeHW1.Models.AccountViewModel
<div class="row">
    <div class="col-md-12">
        <table class="table table-bordered table-hover">
            <tr>
                <th>#</th>
                <th>類別</th>
                <th>日期</th>
                <th>金額</th>
            </tr>
            @for (int i = 0; i < Model.ViewModel.Count; i++)
            {
                <tr>
                    <th><font face="monospace">@(i+1)</font></th>
                    <th><font face="monospace">@Model.ViewModel[i].CostType</font></th>
                    <th><font face="monospace">@Model.ViewModel[i].CostTime.ToShortDateString()</font></th>
                    <th><font face="monospace">@Model.ViewModel[i].Cost</font></th>
                </tr>
            }
        </table>
    </div>
</div>
